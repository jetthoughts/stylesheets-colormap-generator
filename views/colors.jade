extends layout

block js
  script(src='javascripts/main.js')

block flash
  if flash
    .notification(class="#{flash.type}")= flash.message

block content
  #colors !{html}

  #modal
    small#close (esc)
    h5#modal-title
    pre#modal-content

  #merge
    h4.title Select master color
    .merge-list
      each master in masterColors
        .merge-item(style="background:#{master.color}")
          span= master.variable
          | &nbsp;
          small= master.color


